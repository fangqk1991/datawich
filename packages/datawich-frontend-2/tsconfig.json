{
  "compilerOptions": {
    "allowJs": true,
    "jsx": "react-jsx",
    "importHelpers": true,
    "noEmitHelpers": true,
    "declaration": true,
    "moduleResolution": "node",
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "downlevelIteration": true,
    "suppressExcessPropertyErrors": true,
    "suppressImplicitAnyIndexErrors": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["dom", "es2015"],
    "module": "esnext",
    "outDir": "build",
    "target": "es6",
    "sourceMap": true,
    "inlineSourceMap": false
  },
  "include": ["src/**/*.ts", "src/**/*.json", "src/**/*.tsx"]
}
